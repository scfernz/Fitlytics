<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Given name</th>
      <th>Family name</th>
      <th>Age</th>
      <th>Weight</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Gym</th>
      <th>Message</th>
      <th>Goal</th>
      <th>Bfper</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.given_name %></td>
        <td><%= user.family_name %></td>
        <td><%= user.age %></td>
        <td><%= user.weight %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.country %></td>
        <td><%= user.gym %></td>
        <td><%= user.message %></td>
        <td><%= user.goal %></td>
        <td><%= user.bfper %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

